<?php

$states = "Mississippi Alabama Texas Massachusetts Kansas"

$statesArray = [];

$statesIn = explode(' ',$states);

foreach($statesIn as $mystates){

if(preg_match('/xas$/', ($MYstates)))

$statesArray[0] = ($mystates);

}

foreach($statesIn as $states2) {

if(preg_match ('/^k.*s$/i', (mystates2)))

$statesArray[1] = ($mystates2);

}

foreach($statesIn as $mystates3){

$statesArray[2] = (mystates3);

